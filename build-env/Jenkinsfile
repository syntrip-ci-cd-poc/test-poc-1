def project = 'synetic-k8s-poc'
def appName = 'php-poc'
def feSvcName = "${appName}"
def imageTag = "eu.gcr.io/${project}/${appName}:${env.BUILD_NUMBER}"
def nameSpace = "synetic"

pipeline {
  agent {
    kubernetes {
      label "${appName}-jenkins"
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    component: agents
spec:
  containers:
  - name: gcloud
    image: google/cloud-sdk
    volumeMounts:
      - mountPath: /var/run/docker.sock
        name: docker-socket
    command:
    - cat
    tty: true
  volumes:
    - name: docker-socket
      hostPath:
        path: /var/run/docker.sock
"""
    }
  }
  stages {

    stage('Build image') {
      steps {
        container('gcloud') {
          sh "docker build -t ${imageTag} ."
          slackSend "Build started - ${imageTag}"
        }
      }
    }

    stage('Upload image to registry') {
      steps {
        withCredentials([file(credentialsId: 'gcr_jenkins', variable: 'GCR_CREDS')]) {     
          container('gcloud') {
            sh "cat ${GCR_CREDS} | docker login -u _json_key --password-stdin https://eu.gcr.io"
            sh "docker push ${imageTag}"
            slackSend "Uploaded to GCR - ${imageTag}"
          }
        }
      }
    }

    stage('Test') {
      steps {
        container('gcloud') {
          echo "testing ${imageTag}"
        }
      }
    }

    stage('Update Kubernetes') {
      steps {
        container('gcloud') {
          sh "kubectl set image deployments/php-poc-deployment php-poc=${imageTag} -n ${nameSpace}"
          slackSend "Updated K8S - ${imageTag}"
        }
      }
    }    

  }
}